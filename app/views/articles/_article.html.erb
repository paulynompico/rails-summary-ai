<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <iframe src="<%= rails_blob_path(article.document, disposition: :inline) %>" height="200" width="300"></iframe>

  <p>
    <strong>Pages:</strong>
    <%= article.pages %>
  </p>

  <p>
    <strong>Key Info:</strong>
    <% lines = article.info.split(/\d\./) %>
    <% lines.shift %>
    <ul>
      <% lines.each do |line| %>
        <li><%= line %></li>
      <% end %>
    </ul>
  </p>

</div>
